<p id="notice"><%= notice %></p>

<h1>URL shortner!</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Long Url</th>
      <th colspan="3">Short Url</th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.url %></td>
        <td> <a href="/urls/<%= url.id%>" target="_blank"> www.artieshortielink.com/<%=url.id%> </a> </td>

      </tr>

    <% end %>
  </tbody>
</table>

<br>



<%= render 'form', url: @url %>
