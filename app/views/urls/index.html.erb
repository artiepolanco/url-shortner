<p id="notice"><%= notice %></p>

<h1 class="title">Free URL shortner</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="table-head">Long Url</th>
      <th colspan="3" class="table-head">Short Url</th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.url %></td>

        <td><input class="target" value="https://polar-retreat-14918.herokuapp.com/urls<%=url.id%> "></td>
        <td><button class="copy-button btn btn-default" >Copy Link</button>
</td>
      </tr>

    <% end %>
  </tbody>
</table>

