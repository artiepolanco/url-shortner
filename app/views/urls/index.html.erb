<p id="notice"><%= notice %></p>

<h1 class="title">Free URL shortner</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="table-head">Long Url</th>
      <th colspan="3" class="table-head">Short Url</th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.url %></td>
        <td> <a href="/urls/<%= url.id%>" target="_blank"> //polar-retreat-14918.herokuapp.com/<%=url.id%> </a> </td>

      </tr>

    <% end %>
  </tbody>
</table>

<br>



<%= render 'form', url: @url %>
